<div id="login">
  <div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
          <!-- <form id="login-form" class="form"> -->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "form", id: "login-form") do |f| %>
            <h3 class="text-center text-info">Login</h3>
            
            <div class="form-group">
              <label for="username" class="text-info">Username:</label><br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control" %>
            </div>
            
            <div class="form-group">
              <label for="password" class="text-info">Password:</label><br>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
            
            <div class="form-group">
             <label for="remember-me" class="text-info"><span>Remember me</span>Â 
              <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
              <%= f.submit "Log in", class: "btn btn-info btn-md" %>    
            </div>
            
            <div id="register-link">
             <%= render "devise/shared/links", class: "text-info"%>
            </div>
          
          <% end %>
        </div>
       </div>
    </div>
  </div>
</div> 
 